{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://liferay.com/assets-schema.json",
  "title": "Liferay Assets",
  "type": "object",
  "properties": {
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "abstractSummary": {
            "type": "string"
          },
          "indexable": {
            "type": "boolean"
          },
          "smallImage": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name"
        ]
      }
    }
  }
}